<h1>Figure out your Tax - Single</h1>
<div class="field">
  <%= label_tag 'agi_value', 'AGI: '%>$<%= number_field_tag 'agi_value', nil, :min => 0 %><br />
  <%= submit_tag "Calculate Tax", :id=> "agi_submit" %>  29899
</div>
<div id="tax_value">
</div>
<script type='text/javascript'>
$('#agi_submit').click(function(){
  var x=$('#agi_value').val(),
      tax=0;
  if (x>0 && x<=8500) tax=x*.1;
  else if (x>8500 && x<=34500) tax=850+(x-8500)*.15;
  else if (x>34500 && x<=83600) tax=4750+(x-34500)*.25;
  else if (x>83600 && x<=174400) tax=17025+(x-83600)*.28;
  else if (x>174400 && x<=379150) tax=42449+(x-174400)*.33;
  else if (x>379150) tax=110016.5+(x-379150)*.35;
  tax=(Math.round(tax*100)/100).toFixed(2);
  $('#tax_value').html('$'+tax);
});
</script>
